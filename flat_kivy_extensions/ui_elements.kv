<-CustomIconButton>:
    color: app.get_color(self.color_tuple) 
    ripple_color: app.get_color(self.ripple_color_tuple)
    icon_font_size: dp(5) 
    orientation: 'tb-lr'
    canvas.before:
        Color:
            rgb: root.color_down if root.state == 'down' or root.disabled else root.color
        Rectangle:
            size: self.size
            pos: self.pos
